<div class="jt-app jt-card" style="display:flex; flex-direction:column; height:100%;">
  <header class="jt-row" style="justify-content:space-between; align-items:center; margin-bottom:8px;">
    <div class="jt-title">PC/NPC Generator</div>
    <nav class="tabs jt-row" data-group="aam-tabs" style="gap:8px;">
      <a class="item" data-tab="ability">Abilities</a>
      <a class="item" data-tab="classes">Classes</a>
    </nav>
  </header>

  <div class="jt-row" style="gap:8px; align-items:center; margin-bottom:6px; flex-wrap:wrap;">
    <label style="min-width:7rem;">Target Actor</label>
    <input class="jt-input mono" type="text" name="hubActorId" placeholder="(optional) paste Actor ID or UUID" value="{{targetRaw}}" />
    <button type="button" class="jt-button" data-action="pick-actor" title="Pick from Actors Directory">Pick</button>

    <!-- live target chip -->
    <div id="aam-target-chip" class="jt-row jt-card" style="gap:6px; align-items:center; padding:2px 6px; border-radius:6px;">
      <img data-aam-chip-img src="icons/svg/mystery-man.svg" width="20" height="20" style="border-radius:3px; display:none;" />
      <span data-aam-chip-name class="mono jt-muted">(using selected token)</span>
      <!-- open sheet button -->
      <button type="button" class="jt-button" data-action="open-actor-sheet" title="Open Actor Sheet" disabled
              style="padding:2px 6px; line-height:1; font-size:12px; margin-left:4px;">
        Open
      </button>
    </div>
  </div>

  <section class="tab-content jt-card" style="flex:1 1 auto; overflow:auto;">
    <div class="tab" data-tab="ability" id="tab-ability">
      {{{abilityHtml}}}
    </div>
    <div class="tab" data-tab="classes" id="tab-classes">
      {{{classAssignerHtml}}}
    </div>
  </section>

  <!-- custom resize handle for aamhub.js -->
  <div data-resize-handle title="Drag to resize" style="position:absolute; right:10px; bottom:10px; width:16px; height:16px; cursor:se-resize; opacity:.4;">
    <svg viewBox="0 0 16 16" width="16" height="16"><path fill="currentColor" d="M3 13h2v2H3v-2zm4-4h2v2H7V9zm4-4h2v2h-2V5z"/></svg>
  </div>
</div>
